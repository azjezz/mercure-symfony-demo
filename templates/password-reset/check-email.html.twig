{% extends 'user/_layout/standalone-form.html.twig' %}

{% block title %}Password Reset - Toraido{% endblock %}

{% block form %}
    <div class="mb-4 text-sm text-gray-600">
        <p class="mb-1">An email has been sent that contains a link that you can click to reset your password.</p>

        <p class="mb-1">This link will expire in {{ tokenLifetime|date('g') }} hour(s).</p>

        <p>If you don't receive an email please check your spam folder or <a href="{{ path('password_reset_request') }}">try again</a>.</p>
    </div>
{% endblock %}
