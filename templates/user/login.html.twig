{% extends 'user/_layout/standalone-form.html.twig' %}

{% block title %}Login - Toraido{% endblock %}

{% block form %}
    <form method="POST" action="{{ path('user_login') }}">
        {% if error %}
            <div class="mb-4">
                <div class="font-medium text-red-600">Whoops! Something went wrong.</div>

                <ul class="mt-3 list-disc list-inside text-sm text-red-600">
                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                </ul>
            </div>
        {% endif %}

        <div>
            <label class="form-label" for="username">Username</label>
            <input class="form-input w-full" id="username" name="username" type="text" value="{{ last_username }}"
                   autocomplete="username" autofocus="autofocus">
        </div>

        <div class="mt-4">
            <label class="form-label" for="password">Password</label>
            <input class="form-input w-full" id="password" name="password" type="password" autocomplete="password">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <div class="flex items-center justify-end mt-4">
            <a class="link" href="{{ path('password_reset_request') }}">Forgot your password?</a>
            <button type="submit" class="button button-default">Login</button>
        </div>
    </form>
{% endblock %}
