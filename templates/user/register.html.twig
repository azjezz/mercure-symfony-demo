{% extends 'user/_layout/standalone-form.html.twig' %}

{% block title %}Register - Toraido{% endblock %}

{% block form %}
    {{ form_start(form) }}
    {% if errors|length %}
        <div class="mb-4">
            <div class="font-medium text-red-600">Whoops! Something went wrong.</div>
            {% for error in errors %}
                <ul class="mt-3 list-disc list-inside text-sm text-red-600">
                    <li>{{ error.message|trans }}</li>
                </ul>
            {% endfor %}
        </div>
    {% endif %}

    <div>
        <label class="form-label" for="username">Username</label>
        {{ form_widget(form.username, {'attr': {'class': 'form-input w-full', 'autofocus': 'autofocus', 'autocomplete': 'username'}}) }}
    </div>

    <div class="mt-4">
        <label class="form-label" for="email">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-input w-full'}}) }}
    </div>

    <div class="mt-4">
        <label class="form-label" for="password">Password</label>
        {{ form_widget(form.newPassword, {'attr': {'class': 'form-input w-full', 'autocomplete': 'new-password'}}) }}
    </div>

    <div class="flex items-center justify-end mt-4">
        <a class="link" href="{{ path('user_login') }}">Already registered?</a>
        <button type="submit" class="button button-default">Register</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
